<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center"
    tools:context="com.example.lcamacho.firstapplication.Activity.CadastroActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <EditText
                android:layout_width="match_parent"
                android:id="@+id/edtCardNome"
                android:hint="Nome"
                android:inputType="text"
                android:layout_height="wrap_content" />

            <EditText
                android:layout_width="match_parent"
                android:id="@+id/edtCardSobrenome"
                android:hint="Sobrenome"
                android:inputType="text"
                android:layout_height="wrap_content" />

            <EditText
                android:layout_width="match_parent"
                android:id="@+id/edtCardAniversario"
                android:hint="Aniversario"
                android:inputType="date"
                android:layout_height="wrap_content" />

            <EditText
                android:layout_width="match_parent"
                android:id="@+id/edtCardEmail"
                android:hint="E-mail"
                android:inputType="textEmailAddress"
                android:layout_height="wrap_content" />

            <EditText
                android:layout_width="match_parent"
                android:id="@+id/edtCardSenha"
                android:hint="Senha"
                android:inputType="textPassword"
                android:layout_height="wrap_content" />

            <EditText
                android:layout_width="match_parent"
                android:id="@+id/edtCardConfirmarSenha"
                android:hint="Confirmar Senha"
                android:inputType="textPassword"
                android:layout_height="wrap_content" />
            
            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/rgSexo"
                android:orientation="horizontal"
                android:gravity="center">

                <RadioButton
                    android:id="@+id/rbFeminino"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="Feminino"/>

                <RadioButton
                    android:id="@+id/rbMasculino"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="false"
                    android:text="Masculino"/>
                
            </RadioGroup>
            
            <Button
                android:id="@+id/btnGravar"
                android:layout_width="match_parent"
                android:text="Gravar"
                android:layout_height="wrap_content" />


        </LinearLayout>

    </ScrollView>
    
</LinearLayout>
